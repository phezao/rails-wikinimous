<div class="jumbotron">
  <h1><%= @article.title %></h1>
  <p><%= @article.content %></p>
</div>

<ul class="list-group">
  <li class="list-group-item"><%= link_to 'Edit this article', edit_article_path %></li>
  <li class="list-group-item"><%= link_to 'Delete this article', article_path,
    method: :delete,
    data: { confirm: 'Are you sure?'} %></li>
  <li class="list-group-item"><%= link_to 'Go back!', articles_path %></li>
</ul>
